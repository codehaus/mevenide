<?xml version="1.0" encoding="UTF-8"?>
<project>
   <extend>${basedir}/../mevenide-parent/project.xml</extend>
   <artifactId>mevenide-netbeans-j2ee</artifactId>
   <currentVersion>1.1</currentVersion>
   <inceptionYear>2005</inceptionYear>
   <name>Mevenide J2EE support</name>
   <shortDescription>J2EE support for Maven project type.</shortDescription>
   <description>The module provides J2EE related functionality to the Maven project type.</description>
   <url>http://mevenide.codehaus.org/mevenide-netbeans-project</url>
   <package>org.mevenide.netbeans.j2ee</package>
   <dependencies>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>openide</artifactId>
         <!-- include nb module specification version..-->
         <version>4.41</version>
         <type>jar</type>
         <url>http://www.netbeans.org</url>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-openide-io</artifactId>
         <version>1.6.1</version>
         <type>jar</type>
         <url>http://www.netbeans.org</url>
         <!-- dependencies other than the openide jar need to specify the netbeans.module.dep
         property in order for the maven0nbm-plugin to generate the correct Module's manifest entries.
         see maven-nbm-plugin's help for more. -->
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <!--    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-api-java</artifactId>
        <version>1.5-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>    
        -->
      <dependency>
         <groupId>mevenide</groupId>
         <artifactId>mevenide-netbeans-project</artifactId>
         <version>0.8</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-j2ee-common</artifactId>
         <version>1.0.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-websvc-websvcapi</artifactId>
         <version>1.0.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-j2ee-api-ejbmodule</artifactId>
         <version>1.0.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-projectapi</artifactId>
         <version>1.3.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>mevenide</groupId>
         <artifactId>mevenide-config</artifactId>
         <version>0.9</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-api-web-webmodule</artifactId>
         <version>1.2.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-java-project</artifactId>
         <version>1.3.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>cargo</groupId>
         <artifactId>cargo-netbeans</artifactId>
         <version>0.5</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>mevenide</groupId>
         <artifactId>maven-nb-module</artifactId>
         <version>1.0.2</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>maven</groupId>
         <artifactId>maven</artifactId>
         <version>1.0.2</version>
         <type>jar</type>
      </dependency>
      <dependency>
         <groupId>mevenide</groupId>
         <artifactId>mevenide-netbeans-cargo</artifactId>
         <version>0.5.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>cargo</groupId>
         <artifactId>cargo</artifactId>
         <version>0.5</version>
         <type>jar</type>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-j2ee-dd</artifactId>
         <version>1.3.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-j2eeserver</artifactId>
         <version>1.6.1</version>
         <type>jar</type>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-modules-schema2beans</artifactId>
         <version>1.11.1</version>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
      <dependency>
         <groupId>netbeans</groupId>
         <artifactId>org-netbeans-api-debugger-jpda</artifactId>
         <version>1.0-SNAPSHOT</version>
         <type>jar</type>
         <url>http://www.netbeans.org</url>
         <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
         </properties>
      </dependency>
   </dependencies>
   <build>
      <sourceDirectory>src/java</sourceDirectory>
      <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
      <!-- Unit test classes -->
      <unitTest>
         <includes>
            <include>**/*Test.java</include>
         </includes>
      </unitTest>
      <resources>
         <resource>
            <directory>src/conf</directory>
            <includes>
               <include>**</include>
            </includes>
            <excludes>
               <exclude>manifest.mf</exclude>
            </excludes>
         </resource>
      </resources>
   </build>
</project>

