<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project [
  <!ENTITY netbeans-dependencies SYSTEM "file:../mevenide-ui-netbeans/pom-fragments/netbeans-dependencies.xml">	
]>
<project>
  <extend>${basedir}/../mevenide-master/base-project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>mevenide-ui-netbeans</id>
  <name>Mevenide Netbeans</name>
  <artifactId>mevenide-ui-netbeans</artifactId>
  <currentVersion>0.1</currentVersion>
  <package>org.mevenide.ui.netbeans</package>
  <description>Netbeans Maven integration</description>
  <shortDescription>NetbeansIDE maven module</shortDescription>
  
  <dependencies>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>goals-grabber</artifactId>
        <version>0.2-SNAPSHOT</version>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>mevenide-core</artifactId>
        <version>0.1.1-SNAPSHOT</version>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    <dependency>
        <groupId>mevenide</groupId>
        <artifactId>mevenide-config</artifactId>
        <version>0.2-SNAPSHOT</version>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    
    &netbeans-dependencies;
    
    <dependency>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
        <version>1.0.3</version>
        <type>jar</type>
        <properties>
             <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>
        <!-- for netbeans part of maven module -->
        <groupId>commons-discovery</groupId>
        <artifactId>commons-discovery</artifactId>
        <version>0.1</version>
        <type>jar</type>
    </dependency>
    
    <!-- 
        deps below are copied from mevenide-core. have to extract them either through entity or inheritance
    -->
    <!-- maven components -->
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-project</artifactId>
            <version>2.0-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-model</artifactId>
            <version>2.0-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-core</artifactId>
            <version>2.0-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        
        <!-- maven wagon -->
        <dependency>
            <groupId>maven</groupId>
            <artifactId>wagon-api</artifactId>
            <version>0.9-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>wagon-http</artifactId>
            <version>0.9-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        
        <!-- 
            maven rt dependencies - should we also add ${m2.home}/plugins/plexus libs ? 
            ultimately id like to decorrelate mevenide totally from maven installation 
        -->
        <dependency>
            <groupId>plexus</groupId>
            <artifactId>plexus</artifactId>
            <version>0.14-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>plexus</groupId>
            <artifactId>plexus-i18n</artifactId>
            <version>1.0-beta-2-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>classworlds</groupId>
            <artifactId>classworlds</artifactId>
            <version>1.1-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>xpp3</groupId>
            <artifactId>xpp3</artifactId>
            <version>1.1.3.3</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.ext>true</netbeans.module.ext>
            </properties>
        </dependency>
    
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>b9</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>impl</netbeans.module.dep>
            </properties>
        </dependency>
    
  </dependencies>
  
  <build>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/.nbattrs</exclude>
          <exclude>manifest.mf</exclude>
        </excludes>
      </resource>
    </resources>
  </build>

</project>

