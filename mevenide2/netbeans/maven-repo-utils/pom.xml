            <version>2.1-20060902</version>
            <classifier>mevenide</classifier>
        </dependency-->
    
      
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
