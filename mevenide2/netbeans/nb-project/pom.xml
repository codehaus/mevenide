    <profiles>
        <profile>
            <id>nonmac</id>
            <activation>
                <os>
                    <name>!mac os x</name>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>sun.jdk</groupId>
                    <artifactId>tools</artifactId>
                    <version>1.5.0</version>
                    <scope>system</scope>
                    <systemPath>${java15.home}/lib/tools.jar</systemPath>
                </dependency>
            </dependencies>
            <properties>
                <java15.home>${java.home}/..</java15.home>
            </properties>
        </profile>
    </profiles>    
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.modello</groupId>
                <artifactId>modello-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>build-action</id>
                        <goals>
                            <goal>java</goal>
                            <goal>xpp3-reader</goal>
                            <goal>jdom-writer</goal>
                            <goal>xpp3-writer</goal>
                        </goals>
                        <configuration>
                            <version>1.0.0</version>
                            <packageWithVersion>false</packageWithVersion>
                            <models>
                                <model>src/main/mdo/buildAction.xml</model>
                             </models>
                        </configuration>
                    </execution>
                    <execution>
                        <id>archetype</id>
                        <goals>
                            <goal>java</goal>
                            <goal>xpp3-reader</goal>
                        </goals>
                        <configuration>
                            <version>1.0.0</version>
                            <packageWithVersion>false</packageWithVersion>
                            <models>
                                <model>src/main/mdo/archetype-descriptor.mdo</model>
                             </models>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>    
</project>
