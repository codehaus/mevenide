<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>clean</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
        </goals>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>javadoc</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>javadoc:javadoc</goal>
        </goals>
    </action>
    <action>
        <actionName>test</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${className}</test>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>run.single</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>debug.single</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mevenide:netbeans-deploy-plugin:LATEST:deploy</goal>
        </goals>
        <plugins>
            <plugin>
                <!-- when changing the plugin setup, check also the J2eeActionProvider class -->
                <groupId>org.codehaus.mevenide</groupId>
                <artifactId>netbeans-deploy-plugin</artifactId>
                <version>LATEST</version>
                <configuration>
                    <clientUrlPart>index.html</clientUrlPart>
                </configuration>
            </plugin>
        </plugins>
    </action>

    <action>
        <actionName>debug.test.single</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>surefire:test</goal>
            <goal>org.codehaus.mevenide:netbeans-deploy-plugin:LATEST:deploy</goal>
        </goals>
        <properties>
            <test>${className}</test>
        </properties>
        <plugins>
            <plugin>
                <!-- when changing the plugin setup, check also the J2eeActionProvider class -->
                <groupId>org.codehaus.mevenide</groupId>
                <artifactId>netbeans-deploy-plugin</artifactId>
                <version>LATEST</version>
                <configuration>
                    <clientUrlPart>index.html</clientUrlPart>
                </configuration>
            </plugin>
        </plugins>
    </action>
    
</actions>