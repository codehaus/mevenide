<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../mevenide-parent/project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Mevenide Repository</name>
    <artifactId>mevenide-repository</artifactId>
    <currentVersion>0.2</currentVersion>
    <package>org.mevenide.repository</package>
    <shortDescription>Reading local and remote repositories</shortDescription>
    <description>Common codebase for reading local and remote repositories.</description>
    <dependencies>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>2.0</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/httpclient/</url>
            <properties>
                <netbeans.module.ext>true</netbeans.module.ext>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/logging/</url>
            <properties>
                <netbeans.module.dep>spec=org.netbeans.libs.commons_logging/1 &gt; 1.0</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
            <url>http://logging.apache.org/log4j/docs/</url>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-core</artifactId>
            <version>0.10-SNAPSHOT</version>
            <type>jar</type>
            <url>http://mevenide.codehaus.org/mevenide-core/</url>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
    </dependencies>
</project>

