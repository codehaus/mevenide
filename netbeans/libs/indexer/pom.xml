<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>netbeans-libs</artifactId>
    <groupId>org.codehaus.mevenide</groupId>
    <version>1.5-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.mevenide</groupId>
  <artifactId>indexer</artifactId>
  <packaging>nbm</packaging>
  <name>Maven Netbeans Module indexer</name>
  <version>1.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>nbm-maven-plugin</artifactId>
        <version>2.2</version>
        <extensions>true</extensions>
        <configuration>
          <descriptor>src/main/nbm/module.xml</descriptor>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
      <repository>
          <!-- needed to get plexus container snapshot-->
          <id>codehaus.snapshots</id>
          <url>http://snapshots.repository.codehaus.org</url>
      </repository>
  </repositories>
  <dependencies>
    <dependency>
        <artifactId>plexus-container-default</artifactId>
        <groupId>org.codehaus.plexus</groupId>
        <version>1.0-alpha-20</version>
    </dependency>
    <dependency>
        <groupId>org.apache.maven.archiva</groupId>
        <artifactId>archiva-indexer</artifactId>
        <version>1.0-20060923.165121-1</version>
    </dependency>
    <dependency>
		<!-- seems to be needed for proper resolution.. why? -->
        <groupId>org.apache.maven.archiva</groupId>
        <artifactId>archiva</artifactId>
        <version>1.0-20060923.165121-1</version>
        <type>pom</type>
    </dependency>
    <dependency>
        <groupId>org.apache.maven.archiva</groupId>
        <artifactId>archiva-discoverer</artifactId>
        <version>1.0-20060923.165121-1</version>
    </dependency>
    <dependency>
        <groupId>org.apache.maven.archiva</groupId>
        <artifactId>archiva-utils</artifactId>
        <version>1.0-20060923.165121-1</version>
    </dependency>
    <dependency>
        <groupId>org.codehaus.mevenide</groupId>
        <artifactId>nb-mvn-embedder</artifactId>
        <version>2.4-SNAPSHOT</version>
    </dependency>
    <dependency>
        <groupId>org.netbeans.api</groupId>
        <artifactId>org-openide-options</artifactId>
        <version>${netbeans.release}</version>
    </dependency>
  </dependencies>
</project>
