<assembly>
  <id>nbrepo</id>
  <repositories>
      <repository>
          <includeMetadata>true</includeMetadata>
          <outputDirectory>m2-repository</outputDirectory>
          <useStrictFiltering>true</useStrictFiltering>
          <scope>compile</scope>
        <includes>
            <include>org.codehaus.mevenide:netbeans-run-plugin</include>
            <include>org.codehaus.mevenide:netbeans-debugger-plugin</include>
            <include>org.codehaus.mevenide:netbeans-deploy-plugin</include>
            <include>org.codehaus.mevenide:netbeans-nbmreload-plugin</include>
        </includes>
        <excludes>
            <exclude>org.apache.maven:maven-plugin-api</exclude>
            <exclude>org.apache.maven:maven-project</exclude>
        </excludes>
      </repository>
  </repositories>
</assembly>
