<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../mevenide-parent/project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>mevenide-idea</artifactId>
    <name>MevenIDE IDEA Integration</name>
    <package>org.mevenide.idea</package>
    <description>
        This project provides Maven integration into the popular IntelliJ IDEA IDE.
    </description>
    <shortDescription>Maven integration into the popular IntelliJ IDEA IDE.</shortDescription>
    <url>http://mevenide.codehaus.org/mevenide-idea/</url>
    <currentVersion>0.1-SNAPSHOT</currentVersion>
    <distributionSite>beaver.codehaus.org</distributionSite>
    <distributionDirectory>/home/projects/mevenide/dist/distributions/</distributionDirectory>
    <logo>/images/mevenide-idea-logo.png</logo>
    <inceptionYear>2005</inceptionYear>
    <dependencies>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>lib</idea.plugin.target.path>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.0</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>lib</idea.plugin.target.path>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>openapi</artifactId>
            <version>3311</version>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>extensions</artifactId>
            <version>3311</version>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven</artifactId>
            <version>1.0.2</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>resources</idea.plugin.target.path>
            </properties>
        </dependency>
        <dependency>
            <groupId>xpp3</groupId>
            <artifactId>xpp3</artifactId>
            <version>1.1.2a</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>resources</idea.plugin.target.path>
            </properties>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>goals-grabber</artifactId>
            <version>0.8</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>resources</idea.plugin.target.path>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-config</artifactId>
            <version>0.7</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>resources</idea.plugin.target.path>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-core</artifactId>
            <version>0.7</version>
            <properties>
                <idea.plugin.bundle>true</idea.plugin.bundle>
                <idea.plugin.target.path>resources</idea.plugin.target.path>
            </properties>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/etc</directory>
                <targetPath>META-INF</targetPath>
            </resource>
        </resources>
    </build>
</project>
