<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <name>Mevenide IDEA integration</name>
    <id>mevenide-idea</id>
    <description>This plugin provides strong integration of Maven with IntelliJ IDEA.</description>
    <version>0.1</version>
    <vendor url="http://www.codehaus.org" email="arikkfir@gmail.com">
        The Codehaus
    </vendor>
    <change-notes>
        See http://mevenide.codehaus.org/mevenide-idea/announcements/announcement-0.1.txt for
        release notes.
    </change-notes>
    <idea-version since-build="3316"/>

    <application-components>
        <component>
            <implementation-class>org.mevenide.idea.global.MavenManager</implementation-class>
        </component>
        <component>
            <implementation-class>org.mevenide.idea.global.MavenManagerConfigurable</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>org.mevenide.idea.project.ProjectInitializer</implementation-class>
        </component>
    </project-components>

    <module-components>
        <component>
            <implementation-class>org.mevenide.idea.module.ModuleSettings</implementation-class>
        </component>
        <component>
            <implementation-class>org.mevenide.idea.module.ModuleSettingsConfigurable</implementation-class>
        </component>
    </module-components>

</idea-plugin>