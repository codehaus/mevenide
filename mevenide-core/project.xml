            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
        
        <!-- CarefulProjectMarshaller specific dependency -->
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.0b9</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>impl</netbeans.module.dep>
            </properties>
        </dependency>
        
        <!-- logging dependencies -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
            <properties>
