<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>../project.xml</extend>
  <pomVersion>3</pomVersion>
  <artifactId>maven-pde-plugin-test</artifactId>
  <name>maven pde plugin test</name>
  <groupId>mevenide</groupId>
  <currentVersion>0.1</currentVersion>
  <organization>
    <name>the codehaus</name>
    <url>http://mevenide.codehaus.org/maven-pde-plugin</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <package>org.codehaus.mevenide.pde</package>
  <dependencies>
  	<!-- 
  		maven.pde.package - renders the root package of the library in plugin.xml 
  	-->
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.package>org.jdom</maven.pde.package>
      </properties>
    </dependency>
    <!-- 
    	maven.pde.targetPath - library copied to alternateFolder 
    	maven.pde.export     - rendered as non exported in plugin.xml 
    -->
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.export>false</maven.pde.export>
        <maven.pde.targetPath>nonDefaultTarget</maven.pde.targetPath>
      </properties>
    </dependency>
    <!-- 
    	maven.pde.requires - rendered as a requires/plugin element
    -->
    <dependency>
      <groupId>mevenide</groupId>
      <artifactId>maven-pde-lib-test</artifactId>
      <version>0.1</version>
      <type>jar</type>
      <properties>
        <maven.pde.requires>true</maven.pde.requires>
        <!-- 
        	name should rather be searched in the dependency project - if dependency 
        	pom not found this property will be used to reference the plugin
        -->
        <maven.pde.name>org.mevenide.lib.test</maven.pde.name>
      </properties>
    </dependency>
    <!-- 
    	maven.pde.exclude - not rendered in plugin.xml and not copied to lib folder 
    -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
      <properties>
        <maven.pde.exclude>true</maven.pde.exclude>
      </properties>
    </dependency>
    <!-- 
    	duplicated dependencies - not rendered in plugin.xml 
    -->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.3</version>
      <type>jar</type>
      <properties>
        <maven.pde.requires>true</maven.pde.requires>
        <maven.pde.name>org.mevenide.requires.test</maven.pde.name>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.export>false</maven.pde.export>
      </properties>
    </dependency>
  </dependencies>
  <build>
  	<sourceDirectory>main/src/java</sourceDirectory>
  </build>
  <properties>
  	<!-- 
  		maven.pde.enabled - indicates to pde:plugin to treat the project as a pde-enabled artifact 
  		maven.pde.type    - type of generated artifact; one of plugin, feature or site. default is plugin
  	-->
  	<maven.pde.enabled>true</maven.pde.enabled>
  	<maven.pde.type>plugin</maven.pde.type>
  </properties>
</project>

