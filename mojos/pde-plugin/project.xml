<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <name>Maven PDE Plugin</name>
  <groupId>maven</groupId>
  <artifactId>maven-pde-plugin</artifactId>
  <version>0.1</version>
  <type>plugin</type>
  <description>This plugin helps creating pde enabled artifacts. it is intended to replaced old maven-eclipse-plugin-plugin</description>
  <shortDescription>Creates PDE artifacts</shortDescription>
  <url>http://mevenide.codehaus.org/maven-pde-plugin</url>
  
  <organization>
    <name>The Codehaus</name>
    <url>http://www.codehaus.org</url>
  </organization>
  
  <inceptionYear>2004</inceptionYear>
  
  <issueTrackingUrl>http://jira.codehaus.org/secure/BrowseProject.jspa?id=10480</issueTrackingUrl>

  <siteAddress>beaver.codehaus.org</siteAddress>
  <siteDirectory>/home/projects/mevenide/public_html/${pom.artifactId}</siteDirectory>
  
  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.mevenide.codehaus.org:/home/projects/mevenide/scm:${pom.artifactId}</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.mevenide.codehaus.org:/home/projects/mevenide/scm:${pom.artifactId}</developerConnection>
    <url>http://cvs.mevenide.codehaus.org/${pom.artifactId}/</url>
  </repository>
  
  <mailingLists>
    <mailingList>
      <name>Mevenide User List</name>
      <subscribe>user-subscribe@mevenide.codehaus.org</subscribe>
      <unsubscribe>user-unsubscribe@mevenide.codehaus.org</unsubscribe>
      <archive>http://archive.mevenide.codehaus.org/user/</archive>
    </mailingList>
    <mailingList>
      <name>Mevenide Developer List</name>
      <subscribe>dev-subscribe@mevenide.codehaus.org</subscribe>
      <unsubscribe>dev-unsubscribe@mevenide.codehaus.org</unsubscribe>
      <archive>http://archive.mevenide.codehaus.org/dev/</archive>
    </mailingList>
    <mailingList>
      <name>Mevenide Announce List</name>
      <subscribe>announce-subscribe@mevenide.codehaus.org</subscribe>
      <unsubscribe>announce-unsubscribe@mevenide.codehaus.org</unsubscribe>
      <archive>http://archive.mevenide.codehaus.org/announce/</archive>
    </mailingList>    
    <mailingList>
      <name>Mevenide SCM List</name>
      <subscribe>scm-subscribe@mevenide.codehaus.org</subscribe>
      <unsubscribe>scm-unsubscribe@mevenide.codehaus.org</unsubscribe>
      <archive>http://archive.mevenide.codehaus.org/scm/</archive>
    </mailingList>        
  </mailingLists>
  
  <developers>
    <developer>
      <name>Gilles Dodinet</name>
      <id>gdodinet</id>
      <email>gdodinet@codehaus.org</email>
      <organization>Mevenide</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>

  <dependencies>
  	<dependency>
      <groupId>mevenide</groupId>
      <artifactId>mevenide-config</artifactId>
      <version>0.7</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>mevenide</groupId>
      <artifactId>mevenide-core</artifactId>
      <version>0.7</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus</artifactId>
      <version>0.17</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus-artifact-container</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>classworlds</groupId>
      <artifactId>classworlds</artifactId>
      <version>1.1-SNAPSHOT</version>
      <jar>classworlds-1.1-SNAPSHOT.jar</jar>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-plugin</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-model</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-artifact</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-core</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>wagon-api</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>main/src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    <unitTest>
      <excludes>
        <exclude>**/AllTests.java</exclude>
        <!-- exclude those ones till i understand why i cannot correctly lookup MavenProjectBuilder -->
        <exclude>**/CommonPluginValuesReplacerTest.java</exclude>
        <exclude>**/DependencyCollectorTest.java</exclude>
        <!-- exclude abstract tests -->
        <exclude>**/PdeArtifactMojoTest.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>test/resources</directory>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>main/src/resources</directory>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>

