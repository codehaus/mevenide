<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <name>maven pde plugin</name>
  <groupId>mevenide</groupId>
  <artifactId>maven-pde-plugin</artifactId>
  <version>0.1</version>  
  <inceptionYear>2004</inceptionYear>
  <package>org.codehuas.mevenide.pde</package>
  <organization>
    <name>the codehaus</name>
    <url>http://www.codehaus.org</url>
  </organization>
  <dependencies>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.package>org.jdom</maven.pde.package>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.export>false</maven.pde.export>
      </properties>
    </dependency>
    <!-- duplicated dependency -->
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.export>false</maven.pde.export>
      </properties>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
      <properties>
        <maven.pde.exclude>true</maven.pde.exclude>
      </properties>
    </dependency>
    <dependency>
      <groupId>mevenide</groupId>
      <artifactId>requires-test</artifactId>
      <version>SNAPSHOT</version>
      <type>jar</type>
      <properties>
        <maven.pde.requires>true</maven.pde.requires>
      </properties>
    </dependency>
    <!-- duplicated dependency -->
    <dependency>
      <groupId>mevenide</groupId>
      <artifactId>requires-test</artifactId>
      <version>SNAPSHOT</version>
      <type>jar</type>
      <properties>
        <maven.pde.requires>true</maven.pde.requires>
      </properties>
    </dependency>
  </dependencies>
</project>