<project>
  <extend>${basedir}/../mevenide-parent/project.xml</extend>
  <pomVersion>3</pomVersion>
  <artifactId>mevenide-config</artifactId>
  <name>Mevenide Config</name>
  <currentVersion>0.10</currentVersion>
  <package>org.mevenide.config</package>
  <description>
    The Mevenide Config module provides mechanisms for manipulating Maven
    configuration files. For example, system environment variables, project
    configuration (project.properties), and user-defined configuration
    (build.properties).
  </description>
  <versions>
    <version>
      <id>0.3</id>
      <name>0.3</name>
      <tag>V_0_3</tag>
    </version>
    <version>
      <id>0.2</id>
      <name>0.2</name>
      <tag>V_0_2</tag>
    </version>
  </versions>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
      <properties>
        <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.3</version>
      <type>jar</type>
      <properties>
        <netbeans.module.dep>spec=org.netbeans.libs.commons_logging/1 &gt; 1.0</netbeans.module.dep>
        <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <type>jar</type>
      <properties>
        <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
      </properties>
    </dependency>
    <!-- for ProjectWalker resolver -->
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven</artifactId>
      <version>1.0.2</version>
      <type>jar</type>
      <properties>
        <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
        <netbeans.module.dep>spec</netbeans.module.dep>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly</artifactId>
      <version>20030902.160215</version>
      <type>jar</type>
      <properties>
        <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>1.0.1</version>
      <type>jar</type>
      <properties>
        <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <properties>
        <eclipse.plugin.bundle>true</eclipse.plugin.bundle>
        <netbeans.module.dep>spec=jdom &gt; 1.0.1</netbeans.module.dep>
      </properties>
    </dependency>
  </dependencies>
  <build>

    <resources>
      <resource>
        <directory>${basedir}/etc</directory>
        <includes>
          <include>*.*</include>
          <include>org/mevenide/properties/*.*</include>
          <include>templates/**/*.*</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>
