<project>
    <extend>${basedir}/../mevenide-master/base-project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>mevenide-config</id>
    <artifactId>mevenide-config</artifactId>
    <name>Mevenide Config</name>
    <currentVersion>0.2-SNAPSHOT</currentVersion>
    <package>org.mevenide.config</package>
    <description>
    	Mevenide Config allows to manipulate Maven config, e.g. system environment variables, project config (project.properties), user-defined config (build.propertie, ...).
    </description>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>false</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
    </dependencies>
    <build>
		<resources>
			<resource>
				<directory>${basedir}/etc</directory>
				<includes>
					<include>*.*</include>
					<include>org/mevenide/properties/*.*</include>
					<include>templates/**/*.*</include>
				</includes>
			</resource>
		</resources>
    </build>
</project>