<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.netbeans.plugins</groupId>
    <artifactId>ide-mojos</artifactId>
    <packaging>pom</packaging>
    <description>Mojos for use only within the NetBeans IDE JVM</description>
    <name>IDE embedded Mojos</name>
    <version>2.0</version>
    <inceptionYear>2008</inceptionYear>
    <url>http://maven.netbeans.org</url>
    <issueManagement>
        <system>issuezilla</system>
        <url>http://www.netbeans.org/issues/enter_bug.cgi?component=maven</url>
    </issueManagement>
    <developers>
        <developer>
            <id>mkleint</id>
            <name>Milos Kleint</name>
            <email>mkleint@netbeans.org</email>
            <organization>Netbeans.org</organization>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <executable>${java142.home}/bin/javac</executable>
                    <showDeprecation>true</showDeprecation>
                    <compilerVersion>1.4</compilerVersion>
                    <source>1.4</source>
                    <target>1.4</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <repository>
            <id>upload</id>
            <name>netbeans.org Repository</name>
            <url>scpexe://deadlock.netbeans.org:222/home/mkleint/rsync-central</url>
        </repository>
    </distributionManagement>
    
    <repositories>
        <repository>
            <id>netbeans</id>
            <name>repository hosting netbeans.org api artifacts</name>
            <url>http://deadlock.netbeans.org/maven-rsync-central</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>netbeans</id>
            <name>repository hosting netbeans.org api artifacts</name>
            <url>http://deadlock.netbeans.org/maven-rsync-central</url>
        </pluginRepository>
    </pluginRepositories>
    <modules>
        <module>netbeans-debugger-plugin</module>
        <module>netbeans-deploy-plugin</module>
        <module>netbeans-run-plugin</module>
        <module>netbeans-nbmreload-plugin</module>
  </modules>
  
    <properties>
        <!--a fallback to make it work everywhere -->
        <java142.home>${java.home}/..</java142.home>
    </properties>
  
</project>