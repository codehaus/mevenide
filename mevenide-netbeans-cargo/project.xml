<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../mevenide-parent/project.xml</extend>
    <artifactId>mevenide-netbeans-cargo</artifactId>
    <!-- make the version equal the cargo's version to have a clear link -->
    <currentVersion>0.6-SNAPSHOT</currentVersion>
    <inceptionYear>2005</inceptionYear>
    <description>This module integrates Cargo into the IDE.
Cargo is a thin wrapper around existing J2EE containers. 
It provides different APIs to easily manipulate containers.</description>
    <url>http://mevenide.codehaus.org/mevenide-netbeans-project</url>
    <name>Netbeans Cargo integration</name>
    <shortDescription>Integration Cargo (http://cargo.codehaus.org).</shortDescription>
    <package>org.mevenide.netbeans.cargo</package>
    <dependencies>
        <!-- included the latest nbm plugin as dependency to get the plugin for compilation, 
       either update here when new version is released, or remove the dependency and use the new one -->
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>maven-nbm-plugin</artifactId>
            <version>1.1</version>
            <type>plugin</type>
            <url>http://mevenide.codehaus.org/maven-nbm-plugin</url>
        </dependency>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>openide</artifactId>
            <!-- include nb module specification version..-->
            <version>4.41</version>
            <type>jar</type>
            <url>http://www.netbeans.org</url>
        </dependency>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>org-openide-io</artifactId>
            <version>1.6.1</version>
            <type>jar</type>
            <url>http://www.netbeans.org</url>
            <!-- dependencies other than the openide jar need to specify the netbeans.module.dep
         property in order for the maven0nbm-plugin to generate the correct Module's manifest entries.
         see maven-nbm-plugin's help for more. -->
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>cargo</groupId>
            <artifactId>cargo-netbeans</artifactId>
            <version>0.6-SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.5.3-1</version>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.6.2</version>
        </dependency>
        <!-- For unit tests -->
        <dependency>
            <groupId>jetty</groupId>
            <artifactId>org.mortbay.jetty</artifactId>
            <version>4.2.20</version>
        </dependency>
        <!--dependency>
            <groupId>netbeans</groupId>
            <artifactId>org-openide-execution</artifactId>
            <version>1.6</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency-->
        <dependency>
            <groupId>cargo</groupId>
            <artifactId>cargo</artifactId>
            <version>0.6-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <!-- Unit test classes -->
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>manifest.mf</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>

