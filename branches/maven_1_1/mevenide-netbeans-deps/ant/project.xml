<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <id>ant-nb-module</id>
  <artifactId>ant-nb-module</artifactId>
  <groupId>mevenide</groupId>
  <currentVersion>1.6.5</currentVersion>
  <package>org.apache.ant</package>
  <name>apache ant library for Mevenide.</name>
  <shortDescription>Library for project mevenide</shortDescription>
  <description>Library for project mevenide</description>
  <url>http://mevenide.codehaus.org</url>
  <dependencies>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.6.5</version>
      <type>jar</type>
      <url>http://ant.apache.org/</url>
      <properties>
        <netbeans.module.ext>true</netbeans.module.ext>
      </properties>
    </dependency>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant-launcher</artifactId>
      <version>1.6.5</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/ant/</url>
      <properties>
        <netbeans.module.ext>true</netbeans.module.ext>
      </properties>
    </dependency>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant-trax</artifactId>
      <version>1.6.5</version>
      <type>jar</type>
      <properties>
        <netbeans.module.ext>true</netbeans.module.ext>
      </properties>
    </dependency>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant-junit</artifactId>
      <version>1.6.5</version>
      <type>jar</type>
      <properties>
        <netbeans.module.ext>jar</netbeans.module.ext>
      </properties>
    </dependency>
    <dependency>
      <groupId>mevenide</groupId>
      <artifactId>maven-nbm-plugin</artifactId>
      <version>1.4</version>
      <type>plugin</type>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/.nbattrs</exclude>
          <exclude>manifest.mf</exclude>
        </excludes>
      </resource>
    </resources>
  </build>
</project>

