<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <extend>${basedir}/../mevenide-master/base-project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>mevenide-netbeans-project</id>
  <name>Mevenide Netbeans project support</name>
  <artifactId>mevenide-netbeans-project</artifactId>
  <currentVersion>0.2.1</currentVersion>
  <package>org.mevenide.netbeans.project</package>
  <shortDescription>Netbeans Maven project type support module</shortDescription>
  <description>
   The project's aim to to provide Maven project type support for the Netbeans IDE 4.0. 
   The features include recognition of Maven projects, setup of the project in the IDE, running Maven, editor support for configuration files etc. 
  </description>
  <distributionSite>beaver.codehaus.org</distributionSite>
  <distributionDirectory>/home/projects/mevenide/dist</distributionDirectory>
  <dependencies>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>maven-mevenide-plugin</artifactId>
        <version>0.1.1</version>
        <type>plugin</type> 
    </dependency>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>goals-grabber</artifactId>
        <version>0.4</version>
        <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>mevenide-core</artifactId>
        <version>0.3</version>
        <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    <dependency>
        <groupId>mevenide</groupId>
        <artifactId>mevenide-config</artifactId>
        <version>0.4</version>
        <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    <dependency>     
        <groupId>maven</groupId>
        <artifactId>maven</artifactId>
        <version>1.0</version>
        <type>jar</type>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.0b8</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
                <netbeans.module.dep>impl</netbeans.module.dep>
            </properties>
        </dependency>

    <dependency>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
        <version>1.0.3</version>
        <type>jar</type>
        <properties>
             <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
   
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-openide-io</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>1.2</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
             <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>javahelp-api</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>1.2.1</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
             <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>openide</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>4.41</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>openide-loaders</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>4.16</version>
        <url>http://www.netbeans.org</url>
        <type>jar</type>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-openide-execution</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>1.3</version>
        <url>http://www.netbeans.org</url>
        <properties>
             <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    

    <!-- PROJECT DEPS -->
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-projectapi</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>1.0-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-api-java</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>1.5-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-projectuiapi</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-project-libraries</artifactId>
        <version>1.7-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-java-project</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-java-platform</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-queries</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <type>jar</type>
        <version>1.0-SNAPSHOT</version>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-api-debugger-jpda</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
        </properties>
    </dependency>

    <!-- depending on ant, the module dep for netbeans runtime, ant dep for compile time -->
   <dependency>
      <id>ant-nb-module</id>
      <groupId>mevenide</groupId>
      <version>1.5.3-1</version>
      <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
      </properties>
    </dependency>
   <dependency>
      <id>ant</id>
      <version>1.5.3-1</version>
      <type>jar</type>
      <url>http://ant.apache.org/</url>
    </dependency>
 
<!-- commons-lang is part of the maven bundle at netbeans runtime -->       
    <dependency>
      <id>commons-lang</id>
      <version>2.0</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>
<!--    <dependency>
      <id>commons-io</id>
      <type>jar</type>
      <version>20030203.000550</version>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>
    -->
    <!-- for tests only.. -->
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>org-netbeans-modules-masterfs</artifactId>
        <version>1.2-SNAPSHOT</version>
        <type>jar</type>
        <url>http://www.netbeans.org</url>
    </dependency>
             
  </dependencies>
  
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/.nbattrs</exclude>
          <exclude>manifest.mf</exclude>
        </excludes>
      </resource>
      <resource>
         <directory>${maven.build.dir}/project_templates</directory>
         <targetPath>org/mevenide/netbeans/project/resources</targetPath>
         <includes>
           <include>*.zip</include>
         </includes>
      </resource>
    </resources>
  </build>

</project>

