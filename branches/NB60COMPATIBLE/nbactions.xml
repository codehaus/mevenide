<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : nbactions.xml
    Created on : April 10, 2006, 6:08 PM
    Author     : mkleint
    Description:
        Purpose of the document follows.
--><actions>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
            <goal>nbm:cluster</goal>
        </goals>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
            <goal>nbm:cluster</goal>
        </goals>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>nbm:cluster</goal>
            <goal>org.codehaus.mojo:nbm-maven-plugin:2.5:run-ide</goal>
        </goals>
    </action>
    <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>pom</packaging>
                <packaging>nbm</packaging>
            </packagings>
            <goals>
                <goal>nbm:cluster</goal>
                <goal>org.codehaus.mojo:nbm-maven-plugin:2.5:run-ide</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <netbeans.run.params>-J-Xdebug -J-Xnoagent -J-Xrunjdwp:transport=dt_socket,suspend=n,server=n,address=${jpda.address}</netbeans.run.params>
            </properties>
        </action>
</actions>
