<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.codehaus.mevenide</groupId>
    <artifactId>ide-mojos</artifactId>
    <version>1.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>netbeans-debugger-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <name>Maven2 NetBeans Debugger Plugin</name>
  <description>Maven plugin for debugging within NetBeans IDE</description>
  <version>1.3</version>
  <dependencies>
      <dependency>
          <groupId>org.apache.maven</groupId>
          <artifactId>maven-plugin-api</artifactId>
          <!--version>2.0.3</version-->
          <version>RELEASE</version>
      </dependency>
      <dependency>
          <groupId>org.apache.maven</groupId>
          <artifactId>maven-project</artifactId>
          <!--version>2.0.3</version-->
          <version>RELEASE</version>
      </dependency>
      <dependency>
          <groupId>org.netbeans.api</groupId>
          <artifactId>org-openide-util</artifactId>
          <version>RELEASE55</version>
          <scope>provided</scope>
      </dependency>
    
      <dependency>
          <groupId>org.codehaus.mevenide</groupId>
          <artifactId>debugger-bridge</artifactId>
          <version>${mevenide.nb.release}</version>
          <scope>provided</scope>
      </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-plugin-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
      </plugin>
      
    </plugins>
  </reporting>
</project>
