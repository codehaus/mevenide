<?xml version="1.0" encoding="UTF-8"?>

<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>pom</packaging>
            <packaging>nbm</packaging>
        </packagings>
        <goals>
            <goal>nbm:cluster</goal>
            <goal>nbm:run-platform</goal>
        </goals>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>pom</packaging>
            <packaging>nbm</packaging>
        </packagings>
        <goals>
            <goal>nbm:cluster</goal>
            <goal>nbm:run-platform</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
            <netbeans.run.params>-J-Xdebug -J-Xnoagent -J-Xrunjdwp:transport=dt_socket,suspend=n,server=n,address=${jpda.address}</netbeans.run.params>
        </properties>
    </action>
    <action>
        <actionName>nbmreload</actionName>
        <goals>
            <goal>install</goal>
            <goal>org.codehaus.mevenide:netbeans-nbmreload-plugin:1.0.1:reload</goal>
        </goals>
    </action>
</actions>
