<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
    <extend>${basedir}/../mevenide-plugin-parent/project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>maven-jbuilder-opentool-plugin</id>
    <artifactId>maven-jbuilder-opentool-plugin</artifactId>
    <name>Maven JBuilder Opentool Plugin</name>
    <currentVersion>0.1</currentVersion>
    <inceptionYear>2004</inceptionYear>
    <package>org.mevenide.tags</package>
    <shortDescription>This plugin generates JBuilder OpenTool extension packages</shortDescription>
    <versions>
    	<version>
    		<id>0.1</id>
    		<name>0.1</name>
    		<tag>V_0_1_0</tag>
    	</version>
	</versions>    	    	
    <developers>
        <developer>
            <name>Serge Huber</name>
            <id>shuber</id>
            <email>shuber@jahia.com</email>
            <organization>Jahia Ltd</organization>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>maven</id>
            <version>1.0</version>
            <properties>
              <jbuilder.opentool.bundle>true</jbuilder.opentool.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>b9</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly</artifactId>
            <version>20030902.160215</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.5.3-1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-ant</artifactId>
            <version>20030625.032346</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>1.0.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-xml</artifactId>
            <version>SNAPSHOT</version>
            <properties/>
        </dependency>
    </dependencies>

    <build>
        <!-- Useful if your plugin uses some beans -->
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.jelly</include>
                    <include>plugin.properties</include>
                    <include>project.properties</include>
                    <include>project.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
