<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>../plugin-parent/project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>maven-javahelp-plugin</id>
  <groupId>mevenide</groupId>
  <currentVersion>0.1</currentVersion>
  <name>JavaHelp Generator Plugin</name>
  <package></package>
  <logo>/images/logo.gif</logo>
  <inceptionYear>2004</inceptionYear>

  <mailingLists>
    <!-- mailingList>
      <name>${pom.name} Dev List</name>
    </mailingList>
    <mailingList>
      <name>${pom.name} User List</name>
    </mailingList -->
  </mailingLists>

  <build>
   <resources> 
       <resource> 
         <directory>${basedir}/src/plugin-resources</directory> 
         <targetPath>plugin-resources</targetPath> 
       </resource> 
       <resource> 
         <directory>${basedir}</directory> 
         <includes> 
           <include>plugin.jelly</include> 
           <include>plugin.properties</include> 
           <include>project.properties</include> 
           <include>project.xml</include> 
         </includes> 
       </resource> 
     </resources>     
  </build>

  <dependencies>
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly-tags-xml</artifactId>
      <!-- version>20040613.030723</version -->
      <version>SNAPSHOT</version>
      <url>http://jakarta.apache.org/commons/jelly/libs/xml/</url>
    </dependency>
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly-tags-jsl</artifactId>
      <version>20030211.143151</version>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-xdoc-plugin</artifactId>
      <version>1.8</version>
      <type>plugin</type>
      <url>http://www.ibiblio.org/maven/</url>
    </dependency>
  </dependencies>

</project>
