<?xml version="1.0" encoding="UTF-8"?>

<project>
  <pomVersion>3</pomVersion>
  <id>maven-javahelp-plugin-project</id>
  <groupId>mevenide</groupId>
  <currentVersion>1.0</currentVersion>
  <name>Maven JavaHelp Plug-in</name>
  <package>org.mevenide.javahelp</package>
  <logo>/images/logo.gif</logo>
  <inceptionYear>2004</inceptionYear>

  <mailingLists>
    <!-- mailingList>
      <name>${pom.name} Dev List</name>
    </mailingList>
    <mailingList>
      <name>${pom.name} User List</name>
    </mailingList -->
  </mailingLists>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <!-- Unit test classes -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
    <resources>
      <resource>
        <directory>src/conf</directory>
          <includes>
             <include>**/*.*</include>
          </includes>
      </resource>
    </resources>
  </build>

  <reports>
    <report>maven-javadoc-plugin</report>
  </reports>

  <dependencies>
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly-tags-xml</artifactId>
      <version>20040613.030723</version>
      <url>http://jakarta.apache.org/commons/jelly/libs/xml/</url>
    </dependency>
  </dependencies>

</project>

