<?xml version="1.0" encoding="UTF-8"?>

<document>
  <properties>
    <title>maven-nbm-plugin Properties</title>
    <author>Milos Kleint (ca206216@tiscali.cz)</author>
  </properties>
  <body>
    <section name="Basic Properties">
    	<div id="documentContent">
      <table>
        <tr>
          <th>Property</th>
          <th>Optional</th>
          <th>Description</th>
        </tr>
         <tr>
          <td>maven.nbm.manifest</td>
          <td>REQUIRED. Default value is <code>${maven.jar.manifest}</code>.</td>
          <td>
            <p> File contains Netbeans-specific manifest entries.</p>
          </td>
        </tr>
        <tr>
          <td>maven.nbm.autoload</td>
          <td>Optional. Default value is <code>false</code>.</td>
          <td>
            <p>Determines if the modules is an autoload module or not.</p>
          </td>
        </tr>
        <tr>
          <td>maven.nbm.requiresrestart</td>
          <td>Optional. Default value is <code>true</code>.</td>
          <td>
            <p>If true, the application will restart after installation of the module.</p>
          </td>
        </tr>
        <tr>
          <td>maven.nbm.licence</td>
          <td>Optional. Default value is <code>${maven.license.licenseFile}</code>.</td>
          <td>
            <p>Location of the licence file to be included with the nbm.</p>
          </td>
        </tr>
     </table>
     </div>
   </section>
   
   <section name="Temporary Properties">
   	<div id="documentContent">
     <table>
     	<tr>
          <th>Property</th>
          <th>Optional</th>
          <th>Description</th>
        </tr>
        <tr>
          <td>maven.nbm.manifest.bundle.basedir</td>
          <td>REQUIRED. Default value is <code>not defined</code>.</td>
          <td>
            <p>Base folder where the nbm specific resources are expected. 
             Currently is only used for including the Bundle.properties file 
             into that jar that contains localized manifest entries.</p>
          </td>
        </tr>
        <tr>
          <td>maven.nbm.manifest.bundle.include</td>
          <td>REQUIRED. Default value is <code>not defined</code>.</td>
          <td>
            <p>Relative path to the Bundle.properties file including the name of the file.. Eg. org/mevenide/Bundle.properties</p>
          </td>
        </tr>
     </table>
     </div>
   </section>
  </body>
</document>