<project>
	<extend>${basedir}/../mevenide-master/plugin-base-project.xml</extend>
	
    <pomVersion>3</pomVersion>
  
    <id>maven-eclipse-plugin-plugin</id>
    <artifactId>maven-eclipse-plugin-plugin</artifactId>
    <name>MEP Plugin</name>
    
    <currentVersion>0.2-SNAPSHOT</currentVersion>
    
    <shortDescription>This plugin helps creating ready to use eclipse plugins and features distribution</shortDescription>

	<inceptionYear>2003</inceptionYear>
	
    <developers>
    	<developer>
	        <name>Gilles Dodinet</name>
            <id>gdodinet</id>
            <email>rhill2@free.fr</email>
            <organization/>
    		<roles>
    			<role>Creator</role>
    			<role>Developer</role>
    		</roles>
    		<timezone>+1</timezone>
    	</developer>
    </developers>
    
    <dependencies>
        <dependency>
    		<groupId>maven</groupId>	
    		<artifactId>maven</artifactId>
    		<version>1.0-rc1</version>
    	</dependency>
    	<dependency>
    		<groupId>jdom</groupId>	
    		<artifactId>jdom</artifactId>
    		<version>b9</version>
    	</dependency>
    	<dependency>
    		<groupId>commons-logging</groupId>	
    		<artifactId>commons-logging</artifactId>
    		<version>1.0.3</version>
    	</dependency>
    	<dependency>
    		<groupId>log4j</groupId>	
    		<artifactId>log4j</artifactId>
    		<version>1.2.8</version>
    	</dependency>
        <dependency>
    		<groupId>commons-jelly</groupId>	
    		<artifactId>commons-jelly</artifactId>
    		<version>1.0-beta-4</version>
    	</dependency>
    	<dependency>
    		<groupId>ant</groupId>	
    		<artifactId>ant</artifactId>
    		<version>1.5.3-1</version>
    	</dependency>	
    	<dependency>
    		<groupId>commons-jelly</groupId>	
    		<artifactId>commons-jelly-tags-ant</artifactId>
    		<version>20030625.032346</version>
    	</dependency>
    	<dependency>
    		<groupId>commons-lang</groupId>	
    		<artifactId>commons-lang</artifactId>
    		<version>1.0.1</version>
    	</dependency>
    	<dependency>
    		<groupId>commons-jelly</groupId>	
    		<artifactId>commons-jelly-tags-xml</artifactId>
    		<version>SNAPSHOT</version>
    	</dependency>
    </dependencies>
    
    <build>
      <sourceDirectory>src/java</sourceDirectory>
      <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
      <unitTest>
		<includes>
		  <include>**/*Test.java</include>
		</includes>
		<resources>
			<resource>
				<directory>src/test/conf</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
		</resources>
	  </unitTest>
      <resources>
        <resource>
          <directory>src/plugin-resources</directory>
          <targetPath>plugin-resources</targetPath>
        </resource>
        <resource>
		  <directory>${basedir}</directory>
		  <includes>
		  	<include>plugin.*</include>
			<include>project.*</include>
	  	  </includes>
	    </resource>	
      </resources>
	</build>
	
	<reports>
		<report>maven-jellydoc-plugin</report>
		<report>maven-junit-report-plugin</report>
		<report>maven-clover-plugin</report>
		<report>maven-pmd-plugin</report>
	   	<report>maven-checkstyle-plugin</report>
	   	<report>maven-simian-plugin</report>
   	    <report>maven-findbugs-plugin</report>
   	    <report>maven-changelog-plugin</report>
		<report>maven-file-activity-plugin</report>
		<report>maven-developer-activity-plugin</report>
		<report>maven-jxr-plugin</report>
		<report>maven-javadoc-plugin</report>
	</reports>
</project>