    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/mevenide2-idea-core/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>org.codehaus.mevenide:idea-core</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>/mevenide2-idea-core/lib</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
