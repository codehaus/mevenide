<?xml version="1.0" encoding="UTF-8"?>

<project>
  <pomVersion>3</pomVersion>
  <id>jdom-nb-module</id>
  <artifactId>jdom-nb-module</artifactId>
  <groupId>mevenide</groupId>
  <!-- module version 1.0 was the 10.b8, netbeans doesn't allow letters in version numbers whus the b8 was stripped, 
       need an increased version here.-->
  <currentVersion>1.0.1</currentVersion>
  <package>jdom</package>
  <name>jdom library for Mevenide.</name>
  <shortDescription>Library for project mevenide</shortDescription>
  <description>Library for project mevenide</description>
  <url>http://mevenide.codehaus.org</url>
  <dependencies>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <properties>
        <netbeans.module.ext>true</netbeans.module.ext>
      </properties>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/.nbattrs</exclude>
          <exclude>manifest.mf</exclude>
        </excludes>
      </resource>
    </resources>
  </build>  
</project>