<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../mevenide-parent/project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>org.mevenide.repository</artifactId>
    <name>Maven Repository Plugin for Eclipse</name>
    <currentVersion>0.3-SNAPSHOT</currentVersion>
    <description>Eclipse plugin for reading local and remote repositories.</description>
    <shortDescription>Eclipse plugin for navigating repositories.</shortDescription>
    <versions>
        <version>
            <id>0.2.0</id>
            <name>0.2.0</name>
            <tag>V_0_2_0</tag>
        </version>
    </versions>
    <licenses>
        <license>
            <name>Apache License</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-repository</artifactId>
            <version>0.3-SNAPSHOT</version>
            <type>jar</type>
            <url>http://mevenide.codehaus.org/</url>
        </dependency>
        <dependency>
            <!-- transitive dependency of mevenide-repository -->
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>2.0</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/httpclient/</url>
        </dependency>
        <dependency>
            <!-- transitive dependency of commons-httpclient -->
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/logging/</url>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>about.html</include>
                    <include>about.ini</include>
                    <include>about.mappings</include>
                    <include>about.properties</include>
                    <include>asl-v20.txt</include>
                    <include>plugin.properties</include>
                    <include>plugin.xml</include>
                    <include>welcome.xml</include>
                    <include>images/*.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
</project>

