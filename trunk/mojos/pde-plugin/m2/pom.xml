<?xml version="1.0" encoding="UTF-8"?>
<project>
  <!-- @todo extend from pomV3 if possible -->
  <pomVersion>4.0.0</pomVersion>
  <name>Maven PDE Plugin (M2)</name>
  <groupId>maven</groupId>
  <artifactId>maven-pde-m2-plugin</artifactId>
  <version>0.1-SNAPSHOT</version>
  <type>plugin</type>
  <description>This plugin helps creating pde enabled artifacts. it is intended to replaced old maven-eclipse-plugin-plugin</description>
  <shortDescription>Creates PDE artifacts</shortDescription>
  <url>http://mevenide.codehaus.org/maven-pde-plugin</url>
  
  <organization>
    <name>The Codehaus</name>
    <url>http://www.codehaus.org</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  
  <distributionManagement>
    <repository>
      <id>default</id>
      <name>Mevenide Dist</name>
      <url>scp://beaver.codehaus.org//home/projects/mevenide/public/html</url>
    </repository>
  </distributionManagement>

  <ciManagement>
    <nagEmailAddress>mevenide-dev@codehaus.org</nagEmailAddress>
  </ciManagement>
    
  <scm>
    <connection>scm:cvs:pserver:anonymous@cvs.mevenide.codehaus.org:/home/projects/mevenide/scm:mojos/maven-pde-plugin</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.mevenide.codehaus.org:/home/project/mevenide/scm:mojos/maven-pde-plugin</developerConnection>
    <url>http://cvs.mevenide.codehaus.org/mojos/maven-pde-plugin</url>
  </scm>

  <issueManagement>
    <system>jira</system>
    <url>http://jira.codehaus.org/browse/MEVENIDE</url>
  </issueManagement>

  <developers>
    <developer>
      <name>Gilles Dodinet</name>
      <id>gdodinet</id>
      <email>gdodinet@codehaus.org</email>
      <organization>Mevenide</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus</artifactId>
      <version>0.17</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>classworlds</groupId>
      <artifactId>classworlds</artifactId>
      <version>1.1-SNAPSHOT</version>
      <jar>classworlds-1.1-SNAPSHOT.jar</jar>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-plugin</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-model</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-artifact</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-core</artifactId>
      <version>2.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>maven</groupId>
      <artifactId>wagon-api</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
      <jar>wagon-api-1.0-SNAPSHOT.jar</jar>
      <type>jar</type>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>main/src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    <unitTest>
      <excludes>
        <exclude>**/AllTests.java</exclude>
        <!-- exclude this one till i understand why i cannot correctly lookup MavenProjectBuilder -->
        <exclude>**/CommonPluginValuesReplacerTest.java</exclude>
        <exclude>**/PdeArtifactMojoTest.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>test/resources</directory>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>main/src/resources</directory>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>

