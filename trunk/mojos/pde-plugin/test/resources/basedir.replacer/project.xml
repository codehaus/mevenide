<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <artifactId>maven-pde-plugin</artifactId>
  <name>maven pde plugin</name>
  <groupId>mevenide</groupId>
  <version>0.1</version>
  <organization>
    <name>the codehaus</name>
    <url>http://mevenide.codehaus.org/maven-pde-plugin</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <package>org.codehaus.mevenide.pde</package>
  <description>this plugin helps creating pde enabled artifacts. it is intended to replaced old maven-eclipse-plugin-plugin</description>
  <dependencies>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.package>org.jdom</maven.pde.package>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.export>false</maven.pde.export>
      </properties>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
      <properties>
        <maven.pde.exclude>true</maven.pde.exclude>
      </properties>
    </dependency>
    <dependency>
      <groupId>mevenide</groupId>
      <artifactId>requires-test</artifactId>
      <version>SNAPSHOT</version>
      <type>jar</type>
      <properties>
        <maven.pde.requires>true</maven.pde.requires>
      </properties>
    </dependency>
  </dependencies>
</project>

