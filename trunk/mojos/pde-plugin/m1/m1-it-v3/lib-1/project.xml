<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>../project.xml</extend>
  <pomVersion>3</pomVersion>
  <artifactId>maven-pde-lib-test</artifactId>
  <name>maven pde lib test</name>
  <groupId>mevenide</groupId>
  <currentVersion>0.1</currentVersion>
  <organization>
    <name>the codehaus</name>
    <url>http://mevenide.codehaus.org/maven-pde-plugin</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <package>org.codehaus.mevenide.pde</package>
  <dependencies>
  	<!-- 
  		maven.pde.package - renders the root package of the library in plugin.xml 
  	-->
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <properties>
        <maven.pde.package>org.jdom</maven.pde.package>
      </properties>
    </dependency>
  </dependencies>
  <build>
  	<sourceDirectory>main/src/java</sourceDirectory>
  </build>
  <properties>
  	<maven.pde.enabled>true</maven.pde.enabled>
  	<maven.pde.type>plugin</maven.pde.type>
  </properties>
</project>

