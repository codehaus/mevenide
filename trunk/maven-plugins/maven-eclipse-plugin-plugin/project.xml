<project>
    <pomVersion>3</pomVersion>
    <groupId>mevenide</groupId>
    <id>maven-eclipse-plugin-plugin</id>
    <artifactId>maven-eclipse-plugin-plugin</artifactId>
    <name>MEP Plugin</name>
    <currentVersion>0.1.1-SNAPSHOT</currentVersion>
    <logo>/images/mevenide-logo.jpg</logo>
    <organization>
      <name>Mevenide @ Sourceforge</name>
      <url>http://sf.net/</url>
      <logo>http://sourceforge.net/sflogo.php?group_id=54263&amp;type=5</logo>
    </organization>
    <shortDescription>This plugin helps creating ready to use eclipse plugins and features distribution</shortDescription>
    <inceptionYear>2003</inceptionYear>
    <siteAddress>shell.sourceforge.net</siteAddress>
	<!-- siteDirectory>/home/groups/m/me/mevenide/htdocs</siteDirectory -->
  	<siteDirectory>${user.home}/.mevenide/${pom.artifactId}</siteDirectory>
  	<repository>
      <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/mevenide:maven-plugins/${pom.artifactId}</connection>
      <developerConnection>scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/mevenide:maven-plugins/${pom.artifactId}</developerConnection>
      <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/mevenide/maven-plugins/${pom.artifactId}/</url>
    </repository>
    <developers>
    	<developer>
    		<name>Gilles Dodinet</name>
    		<id>gdodinet</id>
    		<roles>
    			<role>Creator</role>
    			<role>Developer</role>
    		</roles>
    		<timezone>+1</timezone>
    	</developer>
    </developers>
    <dependencies>
    	<dependency>
    		<groupId>ant</groupId>	
    		<artifactId>ant</artifactId>
    		<version>1.5.3-1</version>
    	</dependency>	
    	<dependency>
    		<groupId>commons-jelly</groupId>	
    		<artifactId>commons-jelly-tags-ant</artifactId>
    		<version>20030625.032346</version>
    	</dependency>
    </dependencies>
    <build>
      <resources>
        <resource>
          <directory>src/plugin-resources</directory>
          <targetPath>plugin-resources</targetPath>
        </resource>
        <resource>
		  <directory>${basedir}</directory>
		  <includes>
		  	<include>plugin.*</include>
			<include>project.*</include>
	  	  </includes>
	    </resource>	
      </resources>
	</build>
	<reports>
		<!-- to be done -->
	</reports>
</project>