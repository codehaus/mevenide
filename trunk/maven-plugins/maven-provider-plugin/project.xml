<project>
    <pomVersion>4</pomVersion>
    <artifactId>maven-provider-plugin</artifactId>
    <name>Maven Provider plugin</name>
    <groupId>mevenide</groupId>
    <currentVersion>0.1</currentVersion>
    <organization>
        <name>The Codehaus</name>
        <url>http://www.codehaus.org/</url>
    </organization>
    <inceptionYear>2004</inceptionYear>
    <shortDescription>Generates xml descriptor of the properties exposed by a Maven plugin</shortDescription>
    <url>http://mevenide.codehaus.org/maven-provider-plugin</url>
    <repository>
        <connection>scm:pserver:anonymous@cvs.mevenide.codehaus.org:/home/projects/mevenide/scm:maven-provider-plugin</connection>
        <developerConnection>scm:ext:${user.name}@cvs.mevenide.codehaus.org:/home/projects/mevenide/scm</developerConnection>
        <url>http://cvs.mevenide.codehaus.org/maven-pde-plugin</url>
    </repository>
    <developers>
        <developer>
            <name>Gilles Dodinet</name>
            <id>gdodinet</id>
            <email>rhill2@free.fr</email>
            <roles>
                <role>creator</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>ASL 2</name>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-config</artifactId>
            <version>0.3</version>
            <type>jar</type>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <jar>commons-logging-1.0.3.jar</jar>
            <type>jar</type>
            <properties/>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom-b9</artifactId>
            <jar>jdom-b9.jar</jar>
            <type>jar</type>
            <properties/>
        </dependency>
        <dependency>
            <groupId>xmlunit</groupId>
            <artifactId>xmlunit</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test/resources</directory>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
        	<resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.*</include>
                    <include>project.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <properties/>
</project>