<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../mevenide-plugin-parent/project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>maven-nbm-plugin</id>
    <artifactId>maven-nbm-plugin</artifactId>
    <name>Maven NBM Plugin</name>
    <currentVersion>1.1-SNAPSHOT</currentVersion>
    <package>org.mevenide.tags</package>
    <description>This plugin creates a netbeans module artifact for the project, 
also generates nbm file for distribution of the module.
Is able to generate the module information from the pom and additional project properties.</description>
    <shortDescription>This plugin helps creating ready to use Netbeans module distribution</shortDescription>
    <url>http://mevenide.codehaus.org/${pom.artifactId}</url>
    <inceptionYear>2004</inceptionYear>
    <versions>
        <version>
            <name>VERSION_0_1</name>
        </version>
        <version>
            <name>NBM_PLUGIN_VERSION_0_2</name>
        </version>
        <version>
            <name>NBM_PLUGIN_VERSION_0_3</name>
        </version>
        <version>
            <name>NBM_PLUGIN_VERSION_0_4</name>
        </version>
        <version>
            <name>NBM_PLUGIN_VERSION_0_5</name>
        </version>
        <version>
            <name>NBM_PLUGIN_VERSION_0_6</name>
        </version>
        <version>
            <id>1.0</id>
            <name>NBM_PLUGIN_VERSION_1_0</name>
            <tag>NBM_PLUGIN_VERSION_1_0</tag>
        </version>
    </versions>
    <branches>
        <branch>
            <tag>NETBEANS_40</tag>
        </branch>
    </branches>
    <licenses>
        <license>
            <name>Apache Public License 2.0 - for the plugin itself</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Milos Kleint</name>
            <id>mkleint</id>
            <email>mkleint@gmail.com</email>
            <roles>
                <role>Creator</role>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
            <version>2.4.1</version>
            <type>jar</type>
            <properties>
                <classloader>root</classloader>
            </properties>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5.3-1</version>
            <type>jar</type>
            <properties>
                <classloader>root</classloader>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly</artifactId>
            <type>jar</type>
            <!-- need this version because that one is included with maven rc2 
                 see:http://maven.apache.org/faq.html#jelly-site-error -->
            <version>20030902.160215</version>
            <!--    		<version>1.0-beta-4</version> -->
        </dependency>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>nbantext</artifactId>
            <version>4.0</version>
            <type>jar</type>
            <url>http://nbbuild.netbeans.org</url>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-artifact-plugin</artifactId>
            <version>1.4.1</version>
            <type>plugin</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test/conf</directory>
                    <includes>
                        <include>**/*.mf</include>
                        <include>**/*.jar</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.jelly</include>
                    <include>plugin.properties</include>
                    <include>project.properties</include>
                    <include>project.xml</include>
                </includes>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-changes-plugin</report>
        <report>maven-jellydoc-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
    </reports>
</project>

