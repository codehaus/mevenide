<project>
    <pomVersion>3</pomVersion>
    <groupId>mevenide</groupId>
    <id>maven-spinner-wiki-plugin</id>
    <artifactId>maven-spinner-wiki-plugin</artifactId>
    <name>Spinner Wiki Plugin</name>
    <currentVersion>0.1-SNAPSHOT</currentVersion>
    <logo>/images/mevenide-simple-125x37.png</logo>
    <organization>
      <name>Mevenide @ Sourceforge</name>
      <url>http://sf.net/</url>
      <logo>http://sourceforge.net/sflogo.php?group_id=54263&amp;type=2</logo>
    </organization>
    <shortDescription>This plugin Spinner Wiki templates that has the same look-n-feel than the generated site.</shortDescription>
    <inceptionYear>2003</inceptionYear>
    <siteAddress>shell.sourceforge.net</siteAddress>
	<!-- siteDirectory>/home/groups/m/me/mevenide/htdocs</siteDirectory -->
  	<siteDirectory>${user.home}/.mevenide/${pom.artifactId}</siteDirectory>
  	<repository>
      <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/mevenide:maven-plugins/${pom.artifactId}</connection>
      <developerConnection>scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/mevenide:maven-plugins/${pom.artifactId}</developerConnection>
      <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/mevenide/maven-plugins/${pom.artifactId}/</url>
    </repository>
    <developers>
    	<developer>
    		<name>Gilles Dodinet</name>
            <id>gdodinet</id>
            <email>rhill2@free.fr</email>
            <organization/>
    		<roles>
    			<role>Creator</role>
    			<role>Developer</role>
    		</roles>
    		<timezone>+1</timezone>
    	</developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-log</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-util</artifactId>
            <version>SNAPSHOT</version>
        </dependency>	
            
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-xml</artifactId>
            <version>SNAPSHOT</version>
        </dependency>	
            
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-junit</artifactId>
            <version>SNAPSHOT</version>
        </dependency>	
        
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-jsl</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0</version>
        </dependency>
            
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-html</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        
        <dependency>
            <groupId>nekohtml</groupId>
            <artifactId>nekohtml</artifactId>
            <version>0.8.1</version>
        </dependency>   
         
    </dependencies>
    
    <build>
      <resources>
        <resource>
          <directory>src/plugin-resources</directory>
          <targetPath>plugin-resources</targetPath>
        </resource>
        <resource>
		  <directory>${basedir}</directory>
		  <includes>
		  	<include>plugin.*</include>
			<include>project.*</include>
	  	  </includes>
	    </resource>	
      </resources>
	</build>
	<reports>
		<!-- to be done -->
	</reports>
</project>