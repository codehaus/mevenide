<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin url="http://mevenide.codehaus.org/mevenide-idea/">
    <name>Mevenide2 IDEA Build Plugin</name>
    <description>This plugin allows running and building Maven2 projects out of IDEA</description>
    <version>${plugin.version}</version>
    <vendor url="http://mevenide.codehaus.org/">Mevenide Team</vendor>
    <change-notes>
        <![CDATA[
]]>
    </change-notes>
    <idea-version since-build="5700"/>
    <project-components>
        <component>
            <!-- Component's implementation class -->
            <implementation-class>org.codehaus.mevenide.idea.component.MavenBuildProjectComponent
            </implementation-class>
        </component>
    </project-components>
    <depends>Mevenide2 IDEA Core Plugin</depends>
    <actions>
        <action id="org.codehaus.mevenide.idea.action.AddPluginAction"
                class="org.codehaus.mevenide.idea.action.AddPluginAction"
                text="Add plugin to POM"
                description="Adds a plugin to the selected POM"/>
        <action id="org.codehaus.mevenide.idea.action.AddPomAction"
                class="org.codehaus.mevenide.idea.action.AddPomAction" text="Add POM"
                description="Adds a POM to the tree of Maven projects"/>
        <action id="org.codehaus.mevenide.idea.action.RemovePomAction"
                class="org.codehaus.mevenide.idea.action.RemovePomAction"
                text="Remove POM"
                description="Removes a POM from the tree of Maven projects"/>
        <action id="org.codehaus.mevenide.idea.action.RunGoalsAction"
                class="org.codehaus.mevenide.idea.action.RunGoalsAction"
                text="Run goal(s)"
                description="Run selected goal(s) from the given Maven project"/>
        <action id="org.codehaus.mevenide.idea.action.SortAction"
                class="org.codehaus.mevenide.idea.action.SortAction"
                text="Sort ascending"
                description="Sorts the children of the selected node in ascending order"/>
        <action id="org.codehaus.mevenide.idea.action.RemovePluginAction"
                class="org.codehaus.mevenide.idea.action.RemovePluginAction"
                text="Remove Plugin"
                description="Removes selected plugins from the POM"/>
        <action id="org.codehaus.mevenide.idea.action.PauseOutputAction"
                class="org.codehaus.mevenide.idea.action.PauseOutputAction"
                text="Pause Output"
                description="Pauses the output in the build output window"/>
        <action id="org.codehaus.mevenide.idea.action.StopProcessAction"
                class="org.codehaus.mevenide.idea.action.StopProcessAction"
                text="Stop Maven Process"
                description="Stops the currently running Maven Process"/>
        <action id="org.codehaus.mevenide.idea.action.CloseOutputPanelAction"
                class="org.codehaus.mevenide.idea.action.CloseOutputPanelAction"
                text="Close Output Panel"
                description="Closes the output panel"/>
        <action id="org.codehaus.mevenide.idea.action.RerunMavenAction"
                class="org.codehaus.mevenide.idea.action.RerunMavenAction"
                text="Reruns Maven"
                description="Reruns the previous Maven build"/>
        <action id="org.codehaus.mevenide.idea.action.FilterAction"
                class="org.codehaus.mevenide.idea.action.FilterAction" text="Filter Phases and Goals"
                description="Filters phases and goals"/>
    </actions>
</idea-plugin>