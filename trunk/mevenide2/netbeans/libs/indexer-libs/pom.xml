<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>netbeans-libs</artifactId>
        <groupId>org.codehaus.mevenide</groupId>
        <version>3.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>indexer-libs</artifactId>
    <packaging>jar</packaging>
    <name>Archiva libraries for Indexer</name>
    <version>3.1-SNAPSHOT</version>
    <dependencies>
        <dependency>
            <groupId>org.apache.maven.archiva</groupId>
            <artifactId>archiva-indexer</artifactId>
            <version>1.0-20060923.165121-1</version>
        </dependency>
        <dependency>
            <!-- seems to be needed for proper resolution.. why? -->
            <groupId>org.apache.maven.archiva</groupId>
            <artifactId>archiva</artifactId>
            <version>1.0-20060923.165121-1</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.archiva</groupId>
            <artifactId>archiva-discoverer</artifactId>
            <version>1.0-20060923.165121-1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.archiva</groupId>
            <artifactId>archiva-utils</artifactId>
            <version>1.0-20060923.165121-1</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
                    <!-- we need to shade the archiva binaries as well.
                 eventually just use something else/new, 
                 the current archiva is not good for our purposes. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <id>shading</id>                                
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <keepDependenciesWithProvidedScope>true</keepDependenciesWithProvidedScope>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ComponentsXmlResourceTransformer"/>
                            </transformers>
                            <artifactSet>
                                <includes>
                                    <include>org.apache.maven.archiva:archiva-discoverer</include>
                                    <include>org.apache.maven.archiva:archiva-utils</include>
                                    <include>org.apache.maven.archiva:archiva-indexer</include>
                                </includes>
                            </artifactSet>
                            <relocations>
                                <relocation>
                                    <pattern>org.codehaus.plexus.util</pattern>
                                    <excludes>
                                        <exclude>org.codehaus.plexus.util.xml.Xpp3Dom</exclude>
                                        <exclude>org.codehaus.plexus.util.xml.pull.*</exclude>
                                    </excludes>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
         </plugins>
    </build>
</project>
