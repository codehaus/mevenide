<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.codehaus.mevenide</groupId>
        <artifactId>netbeans</artifactId>
        <version>1.2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>netbeans-repository</artifactId>
    <packaging>nbm</packaging>
    <version>2.1.1</version>
    <name>Maven2 Netbeans repository</name>
    <description>Maven2 repository for netbeans specific plugin artifacts, is used from the UI, plugin require running Netbeans.</description>

    <dependencies>
        <!-- mark as dependency to get it built before the nbm gets packaged-->
        <dependency>
            <groupId>org.codehaus.mevenide</groupId>
            <artifactId>netbeans-deploy-plugin</artifactId>
            <version>1.2.1</version>
            <scope>runtime</scope>
        </dependency>
        <!-- mark as dependency to get it built before the nbm gets packaged-->
        <dependency>
            <groupId>org.codehaus.mevenide</groupId>
            <artifactId>netbeans-debugger-plugin</artifactId>
            <version>1.2.1</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mevenide</groupId>
            <artifactId>netbeans-run-plugin</artifactId>
            <version>1.1.1</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mevenide</groupId>
            <artifactId>nb-project</artifactId>
            <version>2.1.1</version>
        </dependency>
    </dependencies>
    
    <build>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>nbm-maven-plugin</artifactId>
                    <version>LATEST</version>
                    <extensions>true</extensions>
                    <configuration>
                        <descriptor>src/main/nbm/module.xml</descriptor>
                        <keystorealias>mevenide2</keystorealias>
                    </configuration>
                </plugin>
                <!--plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.2-SNAPSHOT</version>
                    <executions>
                        <execution>
                            <id>repo</id>
                            <phase>package</phase>
                            <goals>
                                <goal>assembly</goal>
                            </goals>
                            <configuration>
                                <descriptor>src/main/assembly/dep.xml</descriptor>
                            </configuration>
                        </execution>
                    </executions>
                </plugin-->
            </plugins>
    </build>
</project>
