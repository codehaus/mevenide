    <version>3.0.7-SNAPSHOT</version>
    <name>NetBeans continuum support</name>
    <url>http://mevenide.codehaus.org</url>
    <description>Support for Apache Continuum continuous integration servers.</description>

    <dependencies>
        <dependency>
            <groupId>org.codehaus.mevenide</groupId>
            <artifactId>continuum-rpc</artifactId>
            <version>${mevenide.nb.release}</version>
