<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mevenide:netbeans-deploy-plugin:LATEST:deploy</goal>
        </goals>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mevenide</groupId>
                <artifactId>netbeans-deploy-plugin</artifactId>
                <version>LATEST</version>
                <configuration>
                    <forceRedeploy>false</forceRedeploy>
                </configuration>
            </plugin>
        </plugins>
    </action>
    <action>
        <actionName>run.single</actionName>
        <packagings>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mevenide:netbeans-deploy-plugin:LATEST:deploy</goal>
        </goals>
        <plugins>
            <plugin>
                <!-- when changing the plugin setup, check also the J2eeActionProvider class -->
                <groupId>org.codehaus.mevenide</groupId>
                <artifactId>netbeans-deploy-plugin</artifactId>
                <version>LATEST</version>
                <configuration>
                    <clientUrlPart>${webpagePath}</clientUrlPart>
                    <forceRedeploy>false</forceRedeploy>
                </configuration>
            </plugin>
        </plugins>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mevenide:netbeans-deploy-plugin:LATEST:deploy</goal>
            <goal>org.codehaus.mevenide:netbeans-debugger-plugin:LATEST:jpdaconnect</goal>
        </goals>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mevenide</groupId>
                <artifactId>netbeans-deploy-plugin</artifactId>
                <version>LATEST</version>
                <configuration>
                    <forceRedeploy>false</forceRedeploy>
                    <debugmode>true</debugmode>
                </configuration>
            </plugin>
        </plugins>
    </action>
    <action>
        <actionName>debug.single</actionName>
        <packagings>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
            <goal>org.codehaus.mevenide:netbeans-deploy-plugin:LATEST:deploy</goal>
            <goal>org.codehaus.mevenide:netbeans-debugger-plugin:LATEST:jpdaconnect</goal>
        </goals>
        <plugins>
            <plugin>
                <!-- when changing the plugin setup, check also the J2eeActionProvider class -->
                <groupId>org.codehaus.mevenide</groupId>
                <artifactId>netbeans-deploy-plugin</artifactId>
                <version>LATEST</version>
                <configuration>
                    <clientUrlPart>${webpagePath}</clientUrlPart>
                    <debugmode>true</debugmode>
                    <forceRedeploy>false</forceRedeploy>
                </configuration>
            </plugin>
        </plugins>
    </action>
    
</actions>
