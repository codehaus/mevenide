<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../mevenide-parent/project.xml</extend>
    <artifactId>mevenide-netbeans-devel</artifactId>
    <currentVersion>1.0</currentVersion>
    <inceptionYear>2005</inceptionYear>
    <name>Mevenide Developer Support</name>
    <package>org.mevenide.netbeans.devel</package>
    <url>http://mevenide.codehaus.org/mevenide-netbeans-project</url>
    <shortDescription>Module for extending mevenide</shortDescription>
    <description>Netbeans module with tools for developers wishing to extend Mevenide. Easy to use project template created.</description>
    <dependencies>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>openide</artifactId>
            <version>5.9.1</version>
            <type>jar</type>
            <url>http://www.netbeans.org</url>
        </dependency>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>openide-loaders</artifactId>
            <!-- include nb specification version.. that's important for compiling -->
            <version>5.2.1</version>
            <url>http://www.netbeans.org</url>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-netbeans-project</artifactId>
            <version>0.8.1</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-config</artifactId>
            <version>0.9</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>goals-grabber</artifactId>
            <version>0.10</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>conf</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>manifest.mf</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>${maven.build.dir}/project_templates</directory>
                <targetPath>org/mevenide/netbeans/devel</targetPath>
                <includes>
                    <include>*.zip</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>

