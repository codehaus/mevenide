<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <name>Mevenide IDEA integration</name>
    <description>This plugin provides strong integration of Maven with IntelliJ IDEA.</description>
    <version>0.1-SNAPSHOT</version>
    <vendor>Mevenide</vendor>
    <idea-version since-build="3290"/>

    <application-components>
        <component>
            <implementation-class>org.mevenide.idea.main.settings.global.GlobalSettings</implementation-class>
        </component>
        <component>
            <implementation-class>org.mevenide.idea.main.settings.global.GlobalSettingsConfigurable</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>org.mevenide.idea.main.settings.project.ProjectInitializer</implementation-class>
        </component>
    </project-components>

    <module-components>
        <component>
            <implementation-class>org.mevenide.idea.main.settings.module.ModuleSettings</implementation-class>
        </component>
        <component>
            <implementation-class>org.mevenide.idea.main.settings.module.ModuleSettingsConfigurable</implementation-class>
        </component>
        <component>
            <implementation-class>org.mevenide.idea.main.settings.module.ModuleSynchronizer</implementation-class>
        </component>
    </module-components>

</idea-plugin>