<project>
    <extend>${basedir}/../mevenide-master/base-project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>mevenide-goals-grabber</id>
    <name>Goals Grabber</name>
    <artifactId>mevenide-goals-grabber</artifactId>
    <currentVersion>0.1.1</currentVersion>
    <organization/>
    <package>org.mevenide.goals.grabber</package>
    <shortDescription>Gets all the available goals</shortDescription>
    <description>This project provides generic Goals Grabbing mechanism. It is articulated around IGoalsGrabber interface.</description>
    <dependencies>
        <dependency>
           <groupId>mevenide</groupId>
           <artifactId>mevenide-core</artifactId>
           <version>0.1.1</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>2.1</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.1</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>1.0.1</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>xpp3</groupId>
            <artifactId>xpp3</artifactId>
            <version>1.1.2a</version>
            <type>jar</type>
        </dependency>

        <!-- logging -->
        <dependency>
           <groupId>log4j</groupId>
           <artifactId>log4j</artifactId>
           <version>1.2.7</version>
           <url>http://jakarta.apache.org/log4j/</url>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
            	<resource>
            		<directory>${basedir}/src/test/conf</directory>
            		<includes>
            			<include>**/*.*</include>
            		</includes>
            	</resource>	
            </resources>
        </unitTest>
    </build>
    
</project>