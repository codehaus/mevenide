    <build>
        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/.nbattrs</exclude>
                    <exclude>manifest.mf</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>${maven.build.dir}/project_templates</directory>
                <targetPath>org/mevenide/netbeans/project/resources</targetPath>
                <includes>
                    <include>*.zip</include>
                </includes>
            </resource>
        </resources>
