<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:j="jelly:core"
         xmlns:ant="jelly:ant">
	
  <postGoal name="xdoc:register-reports">
  	<!-- deregister test related plugins since there are none -->
    <attainGoal name="maven-jcoverage-plugin:deregister"/>  
    <attainGoal name="maven-junit-report-plugin:deregister"/>  
  </postGoal>
	
  <preGoal name="nbm:prepare-nbm-resources">
     <!-- copy the maven-mevenide-plugin jar to the right location -->
      <ant:mkdirs dir="${maven.build.dir}/nbm/netbeans/mevenide/maven-plugins"/>
      <ant:copy toDir="${maven.build.dir}/nbm/netbeans/mevenide/maven-plugins" 
                 file="${pom.getDependencyPath('mevenide:maven-mevenide-plugin')}"/>
  </preGoal>  
</project>

