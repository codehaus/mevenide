<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <extend>${basedir}/../mevenide-master/base-project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>mevenide-netbeans-grammar</id>
  <name>Mevenide XML grammar</name>
  <artifactId>mevenide-netbeans-grammar</artifactId>
  <currentVersion>0.3-SNAPSHOT</currentVersion>
  <package>org.mevenide.netbeans.grammar</package>
  <description>Maven files XML grammar and code-completion for Netbeans</description>
  <shortDescription>Maven files XML grammar and code-completion for Netbeans</shortDescription>
  
  <dependencies>
    <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>xml-core</artifactId>
        <!-- include nb specification version.. that's important for compiling -->
        <version>1.0.3.6.0</version>
        <url>http://www.netbeans.org</url>
        <properties>
            <netbeans.module.dep>impl</netbeans.module.dep>
        </properties>
    </dependency>
  <dependency>     
        <groupId>netbeans</groupId>
        <artifactId>openide</artifactId>
        <type>jar</type>
        <!-- include nb specification version.. that's important for compiling -->
        <version>3.42.2</version>
        <url>http://www.netbeans.org</url>
    </dependency>    
    <dependency>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
        <version>1.0.3</version>
        <type>jar</type>
        <url>http://jakarta.apache.org/commons/logging.html</url>
	    <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
            <netbeans.lib.generate>true</netbeans.lib.generate>
	    </properties>
    </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
        </dependency>
    
    <dependency>
        <groupId>xml-apis</groupId>
        <artifactId>xml-apis</artifactId>
        <version>1.0.b2</version>
        <type>jar</type>
    </dependency>
    <dependency>
        <groupId>mevenide</groupId>
        <artifactId>mevenide-config</artifactId>
        <version>0.3</version>
        <type>jar</type>
	    <properties>
            <netbeans.module.dep>spec</netbeans.module.dep>
	    </properties>
    </dependency>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>goals-grabber</artifactId>
        <version>0.3</version>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
    <dependency>     
        <groupId>mevenide</groupId>
        <artifactId>mevenide-grammar</artifactId>
        <version>0.2</version>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
    </dependency>
      <dependency>
          <groupId>jdom</groupId>
          <artifactId>jdom</artifactId>
          <version>1.0b8</version>
          <type>jar</type>
          <url>http://www.jdom.org</url>
          <properties>
               <netbeans.module.dep>impl</netbeans.module.dep>
               <netbeans.lib.generate>true</netbeans.lib.generate>
          </properties>
      </dependency>
  </dependencies>
  
  <build>
     <sourceDirectory>src/java</sourceDirectory>
     <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
     <unitTest>
        <includes>
          <include>**/*Test.java</include>
        </includes>
      <resources> 
       <resource> 
         <directory>${basedir}/src/test/conf</directory> 
         <includes> 
           <include>**/*.jelly</include> 
         </includes> 
       </resource>
       </resources> 
     </unitTest>
  
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/.nbattrs</exclude>
          <exclude>manifest.mf</exclude>
        </excludes>
      </resource>
    </resources>
  </build>

</project>

