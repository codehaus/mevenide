<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>${basedir}/../mevenide-parent/project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Mevenide XML grammar</name>
    <artifactId>mevenide-netbeans-grammar</artifactId>
    <currentVersion>0.6.1</currentVersion>
    <package>org.mevenide.netbeans.grammar</package>
    <description>Maven files XML grammar and code-completion for Netbeans. (project.xml, maven.xml and plugin.jelly files completion.</description>
    <shortDescription>Maven files XML grammar and code-completion for Netbeans</shortDescription>
    <dependencies>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>org-netbeans-modules-xml-core</artifactId>
            <!-- include nb specification version.. that's important for compiling -->
			<version>1.8.3.999.4</version>
            <!-- for nb4.2 
             version>1.9.0.4</version-->
            <type>jar</type>
            <url>http://www.netbeans.org</url>
            <properties>
				<netbeans.module.dep>impl=org.netbeans.modules.xml.core/2 = 3.999.4</netbeans.module.dep>
                <!-- for nb 4.2
                 netbeans.module.dep>impl=org.netbeans.modules.xml.core/2 = 4</netbeans.module.dep-->
            </properties>
        </dependency>
        <dependency>
            <groupId>netbeans</groupId>
            <artifactId>openide</artifactId>
            <type>jar</type>
            <!-- include nb specification version.. that's important for compiling -->
            <version>3.42.2</version>
            <url>http://www.netbeans.org</url>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/logging.html</url>
            <properties>
                <netbeans.module.dep>spec=org.netbeans.libs.commons_logging/1 &gt; 1.0</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.0.b2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-config</artifactId>
            <version>0.8-SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>goals-grabber</artifactId>
            <version>0.9-SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-grammar</artifactId>
            <type>jar</type>
            <version>0.6</version>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            </properties>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <url>http://www.jdom.org</url>
            <properties>
                <netbeans.module.dep>spec=jdom &gt; 1.0.1</netbeans.module.dep>
                <netbeans.lib.generate>true</netbeans.lib.generate>
            </properties>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test/conf</directory>
                    <includes>
                        <include>**/*.jelly</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/.nbattrs</exclude>
                    <exclude>manifest.mf</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>

