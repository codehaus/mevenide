<project>
    <extend>${basedir}/../mevenide-master/base-project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>mevenide-grammar</id>
    <artifactId>mevenide-grammar</artifactId>
    <name>Mevenide Grammar</name>
    <currentVersion>0.1-SNAPSHOT</currentVersion>
    <package>org.mevenide.grammar</package>
    <description>
    	Maven files XML grammar and code-completion hints provider
    </description>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>false</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>b9</version>
            <type>jar</type>
            <properties>
                <netbeans.module.dep>spec</netbeans.module.dep>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
            <properties>
            	<eclipse.plugin.bundle>true</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>mevenide</groupId>
            <artifactId>mevenide-config</artifactId>
            <version>0.2-SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>     
            <groupId>mevenide</groupId>
            <artifactId>goals-grabber</artifactId>
            <version>0.2-SNAPSHOT</version>
                <properties>
                    <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
                </properties>
        </dependency>
    </dependencies>
    <build>
    	<resources>
    		<resource>
    			<directory>src/conf/taglibs</directory>
    			<includes>
    				<include>org/mevenide/grammar/resources/taglibs/*.*</include>
    			</includes>
    		</resource>
    	</resources>
    </build>
</project>