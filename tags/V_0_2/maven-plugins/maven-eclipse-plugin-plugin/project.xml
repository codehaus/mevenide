<project>
    <extend>${basedir}/../mevenide-master/plugin-base-project.xml</extend>
    <name>MEP Plugin</name>
    <artifactId>maven-eclipse-plugin-plugin</artifactId>
    <currentVersion>0.2</currentVersion>
    <organization/>
    <inceptionYear>2003</inceptionYear>
    <shortDescription>This plugin helps creating ready to use eclipse plugins and features distribution</shortDescription>
    <versions/>
    <branches/>
    <mailingLists/>
    <developers>
        <developer>
            <name>Gilles Dodinet</name>
            <id>gdodinet</id>
            <email>rhill2@free.fr</email>
            <roles>
                <role>Creator</role>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven</artifactId>
            <version>1.0-rc2</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>b9</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly</artifactId>
            <version>20030902.160215</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.5.3-1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-ant</artifactId>
            <version>20030625.032346</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>1.0.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-xml</artifactId>
            <version>SNAPSHOT</version>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test/conf</directory>
                    <includes>
                        <include>**/*.*</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.*</include>
                    <include>project.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-jellydoc-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-findbugs-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-changes-plugin</report>
    </reports>
    <properties/>
</project>